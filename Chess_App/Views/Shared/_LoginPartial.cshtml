@using Microsoft.AspNetCore.Identity
@using Chess_App.Areas.Identity.Data;

@inject SignInManager<Chess_AppUser> SignInManager
@inject UserManager<Chess_AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-white " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Witaj @UserManager.GetUserAsync(User).Result.NickName!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white">Wyloguj</button>
        </form>
    </li>
}
</ul>
